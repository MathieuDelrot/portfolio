{% extends "template.twig" %}
{% block content %}
<div class="container margintop200">
    {% if success_connection is defined %}
        {{ block("menuadmin", "adminMenu.twig") }}
    {% endif %}
        <div class="row">
            <div class="col-md-12">
                {% if error_connection is defined %}
                    <div class="alert alert-danger">
                        {{ error_connection }}
                    </div>
                {% endif %}
                {% if success_connection is defined %}
                    <div class="alert alert-success">
                        {{ success_connection }}
                    </div>
                {% endif %}
                {% if success_add_project is defined %}
                    <div class="alert alert-success">
                        {{ success_add_project }}<a href="/">Voir les portolios</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {% if adminconnectionform is defined %}
        <div class="row">
            <div class="col-md-12">
                <form action="/admin/home" method="project">
                    {% autoescape %}
                        {{ adminconnectionform.email|raw }}
                        {{ adminconnectionform.password|raw }}
                        {{ adminconnectionform.submit|raw }}
                    {% endautoescape %}
                </form>
            </div>
        {% endif %}
        </div>
    </div>
</div>
{% endblock %}
