{% extends "template.twig" %}

{% block content %}
    <div class="container margintop200">
        <div class="row">
            <h1>{{ post.title }}</h1>
        </div>
        <div class="row">
            <p>{{ post.content }}</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>Les commentaires</h3>
                {% for comment in commentlist  %}
                    <h4>{{ comment.pseudo }}</h4>
                    <h5>{{ comment.comment_date }}</h5>
                    <p>{{ comment.content }}</p>
                {% endfor %}
                {% if connectionform is defined %}
                    <h3>Connectez vous pour laissez votre commentaire</h3>
                    <form action="index.php?action=askConnection&amp;id={{ post.id }}" method="post">
                        {% autoescape %}
                            {{ connectionform.email|raw }}
                            {{ connectionform.password|raw }}
                            {{ connectionform.submit|raw }}
                        {% endautoescape %}
                    </form>
                {% endif  %}
                {% if commentform is defined %}
                    <h3>Laissez votre commentaire {{ member.first_name }}</h3>
                    <form action="index.php?action=addComment&amp;id={{ post.id }}" method="post">
                        {% autoescape %}
                            {{ commentform.pseudo|raw }}
                            {{ commentform.comment|raw }}
                            {{ commentform.submit|raw }}
                        {% endautoescape %}
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}